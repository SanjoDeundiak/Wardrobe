{
	"default": {
		"port": "8080",
		"host": "0.0.0.0",
		"securityLayer": "none"
	},
    "secure": {
        "port": "8081",
        "host": "0.0.0.0",
        "securityLayer": "tls",
        "tls": {
            "certificates": "files",
            "certificateFile": "/tls/cert.pem",
            "privateKeyFile": "/tls/privkey.pem"
        }
    }
}
